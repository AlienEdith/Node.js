<% include ../partials/header %>

<div class="container">
    <h3 class="text-center">Submit New Comment to <%=campground.name%></h3>
    <!-- #addform CSS: Center the form and make it shorter-->
    <div class="row" id="addform">
        <div class="col">
            <form action="/campgrounds/<%=id%>/comments/" method="POST">
            <div class="form-group">
                <label for="text">Comment</label>
                <textarea class="form-control" name="comment[text]" id="text" placeholder="Your Comment"></textarea>
            </div>
            <div class="form-group">
                <button  class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
            </form>
        </div>
        <a href="/campgrounds">View all CampGrounds</a>
    </div>
</div>
<% include ../partials/footer %>
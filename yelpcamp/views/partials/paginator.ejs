<% if (pages > 0) { %>
<div class="container">
    <nav aria-label="Page navigation">
    <ul class="pagination">
        <% 
            for(i=1; i<=pages; i++) {  
                if(Number(currentPage) === i) {
        %>
                <li class="active"><a><%=i%></a></li>
            <% } else { %>
                <li><a href="/campgrounds?search=<%=search%>&page=<%=i%>"><%=i%></a></li>
            <% } %>
        <% } %>
    </ul>
    </nav>
</div>
<% } %>
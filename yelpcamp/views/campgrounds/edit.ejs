<% include ../partials/header %>

<div class="container">
    <h3 class="text-center">Edit Campground <%= campground.name %></h3>
    <!-- #addform CSS: Center the form and make it shorter-->
    <div class="row" id="addform">
        <div class="col">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="name">Name</label>
                <input class="form-control" type="text" name="campground[name]" id="name" value="<%= campground.name %>">
            </div>
            <div class="form-group">
                <label for="img">Image</label>
                <input class="form-control" type="text" name="campground[img]" id="img" value="<%= campground.img %>">
            </div>
            <div class="form-group">
                <label for="img">Description</label>
                <input class="form-control" type="text" name="campground[desc]" id="desc" value="<%= campground.desc %>">
            </div>
            <div class="form-group">
                <label for="price">Price</label>
                <input class="form-control" type="numbder" name="campground[price]" id="price" value="<%= campground.price %>" min="0.00" step="1">
            </div>
            <div class="form-group">
                <button  class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
            </form>
        </div>
        <a href="/campgrounds">View all CampGrounds</a>
    </div>


    
</div>
<% include ../partials/footer %>